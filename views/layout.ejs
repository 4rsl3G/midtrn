<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>

  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Tailwind CDN (simple) -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ["Inter", "ui-sans-serif", "system-ui"] }
        }
      }
    }
  </script>

  <!-- Remixicon -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.6.0/fonts/remixicon.css" rel="stylesheet"/>

  <!-- Toastr -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

  <style>
    /* animasi sederhana */
    .floaty { animation: floaty 4s ease-in-out infinite; }
    @keyframes floaty { 0%,100%{transform:translateY(0)} 50%{transform:translateY(-10px)} }

    .glow { box-shadow: 0 0 0 1px rgba(255,255,255,.06), 0 20px 80px rgba(0,0,0,.35); }
    .gridbg {
      background-image:
        radial-gradient(circle at 20% 20%, rgba(99,102,241,.25), transparent 45%),
        radial-gradient(circle at 80% 20%, rgba(34,197,94,.18), transparent 45%),
        radial-gradient(circle at 30% 80%, rgba(236,72,153,.18), transparent 45%),
        linear-gradient(to bottom, rgba(255,255,255,.06), transparent 35%);
    }
  </style>

  <script>
    toastr.options = {
      "positionClass": "toast-bottom-right",
      "timeOut": "2500",
      "progressBar": true
    };
  </script>
</head>

<body class="min-h-screen bg-zinc-950 text-zinc-100 font-sans">
  <div class="gridbg min-h-screen">
    <header class="sticky top-0 z-30 backdrop-blur border-b border-white/10">
      <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2">
          <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl bg-white/10 border border-white/10">
            <i class="ri-qr-code-line text-xl"></i>
          </span>
          <div class="leading-tight">
            <div class="font-semibold">QRIS Dinamis</div>
            <div class="text-xs text-zinc-400">Node.js • EJS • Tailwind</div>
          </div>
        </a>
        <div class="text-xs text-zinc-400 hidden sm:block">
          UI ala shadcn • Remixicon • Toastr
        </div>
      </div>
    </header>

    <main class="max-w-6xl mx-auto px-4 py-10">
      <%- body %>
    </main>

    <footer class="max-w-6xl mx-auto px-4 pb-10 text-xs text-zinc-500">
      <div class="border-t border-white/10 pt-6 flex flex-col sm:flex-row gap-2 sm:items-center sm:justify-between">
        <span>© <%= new Date().getFullYear() %> Demo QRIS Dinamis</span>
        <span class="inline-flex items-center gap-2">
          <i class="ri-shield-check-line"></i>
          Pastikan webhook pakai HTTPS di production
        </span>
      </div>
    </footer>
  </div>
</body>
</html>
