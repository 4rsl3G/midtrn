<%
  const content = `
  <section class="fade-up grid gap-6 lg:grid-cols-5">
    <!-- LEFT -->
    <div class="lg:col-span-3">
      <div class="rounded-2xl bg-white shadow-soft ring-1 ring-slate-200 overflow-hidden">
        <div class="p-5 sm:p-7 border-b border-slate-200">
          <div class="flex items-start justify-between gap-4">
            <div>
              <h1 class="text-xl sm:text-2xl font-semibold tracking-tight">Scan QRIS</h1>
              <p class="mt-1 text-sm text-slate-600">
                Order ID: <span class="font-mono text-slate-900">${trx.orderId}</span>
              </p>
            </div>
            <a href="/" class="text-sm text-slate-600 hover:text-slate-900 inline-flex items-center gap-2">
              <i class="ri-arrow-left-line"></i> Kembali
            </a>
          </div>

          <div class="mt-5 grid gap-3 sm:grid-cols-2">
            <div class="rounded-xl border border-slate-200 bg-slate-50 p-4">
              <div class="text-xs text-slate-500">Item</div>
              <div class="mt-1 font-semibold">${trx.itemName}</div>
              <div class="mt-1 text-xs text-slate-500">Qty: ${trx.qty}</div>
            </div>
            <div class="rounded-xl border border-slate-200 bg-slate-50 p-4">
              <div class="text-xs text-slate-500">Total</div>
              <div class="mt-1 font-semibold">Rp ${Number(trx.grossAmount).toLocaleString("id-ID")}</div>
              <div class="mt-2 text-xs text-slate-500 flex items-center gap-2">
                Status:
                <span id="statusBadge"
                  class="inline-flex items-center rounded-full px-2.5 py-1 text-[11px] font-semibold ring-1 ring-inset">
                  ${trx.status}
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="p-5 sm:p-7">
          <div class="flex items-center justify-between gap-3">
            <div class="font-semibold flex items-center gap-2">
              <i class="ri-qr-code-line"></i> QR Code
            </div>
            <button id="copyOrder" class="text-xs text-slate-600 hover:text-slate-900 inline-flex items-center gap-2">
              <i class="ri-file-copy-line"></i> Copy Order ID
            </button>
          </div>

          ${
            trx.qrUrl
              ? `
                <div class="mt-5">
                  <!-- QR container responsif: max 320px, full di mobile -->
                  <div class="mx-auto w-full max-w-[320px] rounded-2xl border border-slate-200 bg-white shadow-sm p-4">
                    <div class="aspect-square w-full overflow-hidden rounded-xl bg-white">
                      <img src="${trx.qrUrl}" alt="QRIS"
                        class="h-full w-full object-contain" />
                    </div>
                  </div>

                  <p class="mt-4 text-center text-xs text-slate-500">
                    Scan menggunakan e-wallet / mobile banking yang mendukung QRIS.
                  </p>
                </div>
              `
              : `
                <div class="mt-5 rounded-xl border border-amber-200 bg-amber-50 p-4 text-amber-800 text-sm">
                  QR URL tidak ditemukan dari response.
                </div>
              `
          }

          <div class="mt-6 flex flex-col sm:flex-row gap-3 sm:items-center sm:justify-between">
            <button id="checkNow"
              class="inline-flex w-full sm:w-auto items-center justify-center gap-2 rounded-xl bg-slate-900 px-5 py-3
                     text-sm font-semibold text-white shadow-sm hover:opacity-95 active:opacity-90 transition">
              <i class="ri-refresh-line"></i> Cek Status
            </button>

            <div class="text-xs text-slate-500">
              Auto-check tiap <span class="font-mono text-slate-700">3s</span>.
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- RIGHT -->
    <aside class="lg:col-span-2">
      <div class="rounded-2xl bg-white shadow-soft ring-1 ring-slate-200">
        <div class="p-5 sm:p-7">
          <h2 class="text-base font-semibold">Status yang umum</h2>
          <div class="mt-4 space-y-2 text-sm text-slate-600">
            <div class="flex items-center justify-between rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
              <span class="inline-flex items-center gap-2"><span class="h-2 w-2 rounded-full bg-amber-400"></span> pending</span>
              <span class="text-xs text-slate-500">menunggu bayar</span>
            </div>
            <div class="flex items-center justify-between rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
              <span class="inline-flex items-center gap-2"><span class="h-2 w-2 rounded-full bg-emerald-500"></span> settlement/capture</span>
              <span class="text-xs text-slate-500">sukses</span>
            </div>
            <div class="flex items-center justify-between rounded-xl border border-slate-200 bg-slate-50 px-4 py-3">
              <span class="inline-flex items-center gap-2"><span class="h-2 w-2 rounded-full bg-rose-500"></span> expire/cancel/deny</span>
              <span class="text-xs text-slate-500">gagal</span>
            </div>
          </div>

          <div class="mt-6 rounded-xl border border-slate-200 bg-slate-50 p-4 text-xs text-slate-600">
            <div class="font-semibold mb-2">Tips</div>
            <ul class="list-disc pl-4 space-y-1">
              <li>Hentikan polling saat status sudah final.</li>
              <li>Webhook tetap yang paling reliable untuk update status.</li>
            </ul>
          </div>
        </div>
      </div>
    </aside>
  </section>

  <script>
    const orderId = ${JSON.stringify(trx.orderId)};
    const statusBadge = document.getElementById("statusBadge");
    const checkNowBtn = document.getElementById("checkNow");
    const copyOrderBtn = document.getElementById("copyOrder");

    function paintBadge(status) {
      // ring + text color light theme
      const styles = {
        settlement: "text-emerald-700 bg-emerald-50 ring-emerald-200",
        capture:    "text-emerald-700 bg-emerald-50 ring-emerald-200",
        pending:    "text-amber-700 bg-amber-50 ring-amber-200",
        expire:     "text-rose-700 bg-rose-50 ring-rose-200",
        cancel:     "text-rose-700 bg-rose-50 ring-rose-200",
        deny:       "text-rose-700 bg-rose-50 ring-rose-200",
        failure:    "text-rose-700 bg-rose-50 ring-rose-200",
        unknown:    "text-slate-700 bg-slate-100 ring-slate-200"
      };
      const cls = styles[status] || styles.unknown;
      statusBadge.className = "inline-flex items-center rounded-full px-2.5 py-1 text-[11px] font-semibold ring-1 ring-inset " + cls;
      statusBadge.textContent = status;
    }

    async function fetchStatus(silent=false) {
      try {
        const r = await fetch("/api/status/" + encodeURIComponent(orderId), { cache: "no-store" });
        const j = await r.json();
        if (!j.ok) throw new Error(j.message || "failed");
        const s = j.transactionStatus || "unknown";
        paintBadge(s);

        if (!silent) {
          if (s === "settlement" || s === "capture") toastr.success("Pembayaran sukses ✅");
          else if (s === "pending") toastr.info("Menunggu pembayaran…");
          else if (["expire","cancel","deny","failure"].includes(s)) toastr.error("Pembayaran gagal/expired.");
          else toastr.warning("Status: " + s);
        }
        return s;
      } catch (e) {
        if (!silent) toastr.error("Gagal cek status.");
        return "error";
      }
    }

    checkNowBtn.addEventListener("click", () => fetchStatus(false));

    copyOrderBtn.addEventListener("click", async () => {
      await navigator.clipboard.writeText(orderId);
      toastr.success("Order ID tersalin");
    });

    // initial paint
    paintBadge(${JSON.stringify(trx.status)});

    // polling
    let timer = setInterval(async () => {
      const s = await fetchStatus(true);
      if (s === "settlement" || s === "capture" || ["expire","cancel","deny","failure"].includes(s)) {
        clearInterval(timer);
        fetchStatus(false);
      }
    }, 3000);
  </script>
  `;
%>

<%- include("layout", { title, body: content }) %>
