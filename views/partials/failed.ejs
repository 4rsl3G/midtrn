<section>
  <div class="rounded-2xl bg-white shadow-soft ring-1 ring-slate-200 overflow-hidden">
    <div class="p-6 sm:p-8 border-b border-slate-200">
      <div class="flex items-start justify-between gap-4">
        <div class="flex items-start gap-3">
          <div class="h-12 w-12 rounded-2xl bg-rose-600 text-white flex items-center justify-center">
            <i class="ri-close-line text-2xl"></i>
          </div>
          <div>
            <h1 class="text-xl sm:text-2xl font-semibold tracking-tight">Pembayaran Tidak Berhasil</h1>
            <p class="mt-1 text-sm text-slate-600">Transaksi expired / dibatalkan / ditolak.</p>
          </div>
        </div>

        <button data-action="new-payment"
          class="inline-flex items-center gap-2 rounded-xl bg-slate-900 px-3 py-2 text-xs font-semibold text-white hover:opacity-95">
          <i class="ri-refresh-line"></i> Coba lagi
        </button>
      </div>
    </div>

    <div class="p-6 sm:p-8 grid gap-4 sm:grid-cols-3">
      <div class="rounded-xl border border-slate-200 bg-slate-50 p-4">
        <div class="text-xs text-slate-500">Order ID</div>
        <div class="mt-1 font-mono text-sm"><%= trx.orderId %></div>
      </div>
      <div class="rounded-xl border border-slate-200 bg-slate-50 p-4">
        <div class="text-xs text-slate-500">Item</div>
        <div class="mt-1 font-semibold"><%= trx.itemName %></div>
      </div>
      <div class="rounded-xl border border-slate-200 bg-slate-50 p-4">
        <div class="text-xs text-slate-500">Total</div>
        <div class="mt-1 font-semibold">Rp <%= Number(trx.grossAmount).toLocaleString("id-ID") %></div>
      </div>
    </div>
  </div>
</section>
