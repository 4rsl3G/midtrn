<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ["Inter", "ui-sans-serif", "system-ui"] },
          boxShadow: { soft: "0 1px 2px rgba(16,24,40,.06), 0 12px 28px rgba(16,24,40,.10)" }
        }
      }
    }
  </script>

  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.6.0/fonts/remixicon.css" rel="stylesheet"/>

  <!-- jQuery + Toastr -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

  <!-- ✅ Midtrans Snap JS (Sandbox/Prod) + Client Key -->
  <script src="<%= snapJsUrl %>" data-client-key="<%= clientKey %>"></script>

  <!-- ✅ Perbaiki path static: kalau express static kamu di /public -->
  <link rel="stylesheet" href="/app.css" />
</head>

<body class="min-h-screen bg-slate-50 text-slate-900 font-sans">
  <div class="pointer-events-none fixed inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-b from-white to-slate-50"></div>
    <div class="absolute -top-24 left-1/2 h-72 w-[42rem] -translate-x-1/2 rounded-full blur-3xl opacity-30
                bg-gradient-to-r from-indigo-300 via-sky-200 to-emerald-200"></div>
    <div class="absolute inset-0 [background-image:radial-gradient(rgba(15,23,42,.06)_1px,transparent_1px)]
                [background-size:18px_18px]"></div>
  </div>

  <header class="sticky top-0 z-30 border-b border-slate-200 bg-white/90 backdrop-blur">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <div class="flex h-14 items-center justify-between">
        <a href="#" data-nav="checkout" class="flex items-center gap-3">
          <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl bg-slate-900 text-white shadow-sm">
            <i class="ri-qr-code-line text-lg"></i>
          </span>
          <div class="leading-tight">
            <div class="flex items-center gap-2">
              <span class="text-sm font-semibold tracking-tight">Pembayaran SNAP</span>
              <span class="hidden sm:inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-2 py-0.5 text-[11px] font-medium text-slate-600">
                AJAX
              </span>
            </div>
            <div class="text-[11px] text-slate-500">Node.js • EJS • Tailwind</div>
          </div>
        </a>

        <div class="flex items-center gap-2">
          <button data-nav="checkout"
            class="hidden sm:inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50">
            <i class="ri-home-4-line"></i> Checkout
          </button>

          <button id="navHelp"
            class="inline-flex items-center gap-2 rounded-xl bg-slate-900 px-3 py-2 text-xs font-semibold text-white hover:opacity-95">
            <i class="ri-information-line"></i> Bantuan
          </button>
        </div>
      </div>
    </div>
  </header>

  <main class="mx-auto max-w-6xl px-4 sm:px-6 py-6 sm:py-10">
    <div id="view"></div>
  </main>

  <footer class="mx-auto max-w-6xl px-4 sm:px-6 pb-10 text-xs text-slate-500">
    <div class="border-t border-slate-200 pt-6 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
      <span>© <%= new Date().getFullYear() %> Demo Snap</span>
      <span class="inline-flex items-center gap-2">
        <i class="ri-lock-2-line"></i> HTTPS untuk webhook production
      </span>
    </div>
  </footer>

  <!-- Overlay -->
  <div id="overlay">
    <div class="backdrop"></div>
    <div class="panel">
      <div class="rounded-2xl bg-white shadow-soft ring-1 ring-slate-200 p-5">
        <div class="flex items-center gap-3">
          <div class="h-10 w-10 rounded-xl bg-slate-900 text-white flex items-center justify-center">
            <i class="ri-loader-4-line ri-spin"></i>
          </div>
          <div class="flex-1">
            <div class="text-sm font-semibold">Mohon tunggu</div>
            <div id="overlayText" class="text-xs text-slate-600">Memproses…</div>
          </div>
        </div>
        <div class="mt-4 h-2 w-full rounded-full bg-slate-100 overflow-hidden">
          <div class="h-full w-1/2 shimmer"></div>
        </div>
      </div>
    </div>
  </div>

  <script>
    $("#navHelp").on("click", function () {
      toastr.info("Klik bayar untuk membuka Snap. Metode pembayaran akan tampil sesuai channel yang aktif.");
    });
  </script>

  <!-- ✅ Perbaiki path static: kalau express static kamu di /public -->
  <script src="/app.js"></script>
</body>
</html>
